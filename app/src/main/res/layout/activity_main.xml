<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#000000"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/extractButton"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/extract_button"
        android:background="#654321"
        android:textColor="#ffffff"
        android:onClick="displayURL" />

    <TextView
        android:id="@+id/displayTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/extractButton"
        android:layout_below="@+id/extractButton"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="#000000"
        android:textColor="#ffffff"
        android:scrollbars="vertical"
        android:freezesText="true"
        android:inputType="textMultiLine"/>


    <EditText
        android:id="@+id/urlTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="10dp"
        android:ems="10"
        android:hint="Enter a URL">

        <requestFocus />
    </EditText>

</RelativeLayout>